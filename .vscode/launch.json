{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug lsofwin",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\Debug\\lsofwin.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "Build Debug"
        },
        {
            "name": "Debug lsofwin (-p self)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\Debug\\lsofwin.exe",
            "args": ["-p", "${command:extension.commandvariable.pickStringRemember}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "Build Debug"
        },
        {
            "name": "Debug lsofwin (-h)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\Debug\\lsofwin.exe",
            "args": ["-h"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "Build Debug"
        },
        {
            "name": "Debug lsofwin (custom args)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\Debug\\lsofwin.exe",
            "args": ["${input:lsofwinArgs}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "Build Debug"
        }
    ],
    "inputs": [
        {
            "id": "lsofwinArgs",
            "type": "promptString",
            "description": "Enter lsofwin arguments (e.g., -p 1234 -j)",
            "default": "-h"
        }
    ]
}
