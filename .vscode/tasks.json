{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "& 'C:\\Program Files\\Microsoft Visual Studio\\2022\\Enterprise\\MSBuild\\Current\\Bin\\MSBuild.exe' '${workspaceFolder}\\lsofwin.sln' /p:Configuration=Debug /p:Platform=x64 /v:minimal /nologo",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "clear": true
            }
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "& 'C:\\Program Files\\Microsoft Visual Studio\\2022\\Enterprise\\MSBuild\\Current\\Bin\\MSBuild.exe' '${workspaceFolder}\\lsofwin.sln' /p:Configuration=Release /p:Platform=x64 /v:minimal /nologo",
            "group": "build",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "clear": true
            }
        },
        {
            "label": "Rebuild Debug",
            "type": "shell",
            "command": "& 'C:\\Program Files\\Microsoft Visual Studio\\2022\\Enterprise\\MSBuild\\Current\\Bin\\MSBuild.exe' '${workspaceFolder}\\lsofwin.sln' /p:Configuration=Debug /p:Platform=x64 /t:Rebuild /v:minimal /nologo",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Rebuild Release",
            "type": "shell",
            "command": "& 'C:\\Program Files\\Microsoft Visual Studio\\2022\\Enterprise\\MSBuild\\Current\\Bin\\MSBuild.exe' '${workspaceFolder}\\lsofwin.sln' /p:Configuration=Release /p:Platform=x64 /t:Rebuild /v:minimal /nologo",
