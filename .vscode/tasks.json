        {
            "label": "Clean",
            "type": "shell",
            "command": "& 'C:\\Program Files\\Microsoft Visual Studio\\2022\\Enterprise\\MSBuild\\Current\\Bin\\MSBuild.exe' '${workspaceFolder}\\lsofwin.sln' /p:Configuration=Debug /p:Platform=x64 /t:Clean /v:minimal /nologo",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "pwsh -ExecutionPolicy Bypass -File '${workspaceFolder}\\tests\\script_based\\run_tests.ps1' -LsofwinPath '${workspaceFolder}\\build\\Debug\\lsofwin.exe'",
            "group": "test",
            "problemMatcher": [],
